PORT=3000
JWT_SECRET=your_jwt_secret_here
MICROSOFT_CLIENT_ID=your_ms_client_id
MICROSOFT_CLIENT_SECRET=your_ms_client_secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# MySQL settings (required)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=minechat

# Alibaba Cloud OSS settings
# Fill these to enable file uploads to OSS
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET=your-bucket-name
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# Whether to return signed URLs (true/false). If true, OSS_SIGNED_EXPIRES sets seconds until expiry.
OSS_SIGNED=false
OSS_SIGNED_EXPIRES=3600

# Session / Cookie
# Number of days a server session remains valid (default 30)
SESSION_EXPIRES_DAYS=30
# If true, cookie will be set with Secure flag (use on HTTPS)
COOKIE_SECURE=false
